doctype html
html(lang="ko")
    head
        title Btube | #{pageTitle}
        link(rel="stylesheet" href="https://unpkg.com/mvp.css")
    body
        header unpkg header
            if mockUser.loggedIn
                small Hello #{mockUser.username}
            nav
                ul
                    if mockUser.loggedIn
                        li
                            a(href="/login") Log out
                    else
                        li
                            a(href="/login") Log in
            h1=pageTitle
        main
            block content
    include partials/footer.pug